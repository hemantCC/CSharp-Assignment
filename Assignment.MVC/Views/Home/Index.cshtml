@{
    ViewBag.Title = "Home Page";
}

<style>
    img {
        width: 100%;
    }

    .carousel-inner {
        width: 100%;
        max-height: 90vh;
    }
</style>


<!--Carousel Section-->
<div class="carousel slide" id="MySliderCarousel" data-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Content/Image/1.jpg" />
                <div class="carousel-caption d-none d-md-block">
                    <h5>...</h5>
                    <p>...</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Content/Image/2.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/Image/3.jpg" />
            </div>
            <div class="carousel-item">
                <img src="~/Content/Image/4.jpg" />
            </div>
        </div>
        <ul class="carousel-indicators">
            <li data-target="#MySliderCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#MySliderCarousel" data-slide-to="1"></li>
            <li data-target="#MySliderCarousel" data-slide-to="2"></li>
            <li data-target="#MySliderCarousel" data-slide-to="3"></li>
        </ul>
        <a href="#MySliderCarousel" data-slide="prev" class="carousel-control-prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a href="#MySliderCarousel" data-slide="next" class="carousel-control-next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>
@*<div class="display-4 text-center" style="margin-top:18%;margin-bottom:14%;">Welcome to Product Management Application</div>*@
<!--Alert Code Section-->
@{
    if (TempData["Logout"] != null)
    {
        <script type="text/javascript">
            Swal.fire({
                position: 'top-end',
                icon: 'success',
                title: 'Logout Successfully!',
                showConfirmButton: false,
                timer: 1500
            })

        </script>
    }
}